<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for local network access -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.0.6</domain>
    </domain-config>

    <!-- Allow cleartext traffic for Ngrok -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">your-ngrok-id.ngrok.io</domain>
    </domain-config>
</network-security-config>
